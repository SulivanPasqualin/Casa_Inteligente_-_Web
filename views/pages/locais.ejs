<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página Home</title>
    <!-- Adicionando o link do Bulma -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
    <style>
        /* Estilos personalizados aqui, se necessário */
    </style>
</head>

<body>
    <!-- Incluir o header -->
    <%- include ("../layout/header.ejs") %>

    <div class="container">
        <h1>Cadastro de Cômodos</h1>
        <form id="comodo-form" class="box">
            <div class="field">
                <label for="comodo-nome" class="label">Nome do Cômodo:</label>
                <input type="text" id="comodo-nome" class="input" required>
            </div>
            <div class="field is-grouped">
                <div class="control">
                    <button type="submit" class="button is-primary">Cadastrar Cômodo</button>
                </div>
                <div class="control">
                    <button type="reset" class="button is-danger">Limpar</button>
                </div>
            </div>
        </form>

        <hr>

        <h1>Lista de Cômodos Cadastrados</h1>
        <ul id="lista-comodos"></ul>

        <hr>

        <h1>Cadastro de Dispositivos do Cômodo Selecionado</h1>
        <div id="dispositivos">
            <!-- Área para mostrar os dispositivos do cômodo selecionado -->
        </div>
    </div>

    <!-- Incluir o menu -->
    <%- include ("../layout/menu") %>

    <!-- Incluir o footer -->
    <%- include ("../layout/footer") %>

    <script>
        const listaComodos = document.getElementById('lista-comodos');
        const dispositivosContainer = document.getElementById('dispositivos');
        const comodoForm = document.getElementById('comodo-form');
        let comodosCadastrados = []; // Array para armazenar os cômodos cadastrados

        // Event listener para cadastrar um cômodo
        comodoForm.addEventListener('submit', function(event) {
            event.preventDefault();
            const nomeComodo = document.getElementById('comodo-nome').value;

            if (!comodosCadastrados.includes(nomeComodo)) {
                comodosCadastrados.push(nomeComodo);
                mostrarListaComodos();
            }
        });

        // Mostrar a lista de cômodos cadastrados
        function mostrarListaComodos() {
            listaComodos.innerHTML = '';
            comodosCadastrados.forEach(function(comodo) {
                const listItem = document.createElement('li');
                listItem.textContent = comodo;
                listItem.addEventListener('click', function() {
                    mostrarDispositivosComodo(comodo);
                });
                listaComodos.appendChild(listItem);
            });
        }

        // Mostrar dispositivos do cômodo selecionado
        function mostrarDispositivosComodo(comodo) {
            dispositivosContainer.innerHTML = '';

            const tituloComodoSelecionado = document.createElement('h2');
            tituloComodoSelecionado.textContent = `Cômodo: ${comodo}`;
            dispositivosContainer.appendChild(tituloComodoSelecionado);

            // Aqui você pode adicionar lógica para mostrar os dispositivos cadastrados no cômodo selecionado
            // Exemplo: criar botões para cada dispositivo com funcionalidades de ligar, desligar, etc.
            const dispositivo = document.createElement('div');
            dispositivo.textContent = 'Lâmpada';
            dispositivosContainer.appendChild(dispositivo);
        }

        // Mostrar lista inicial de cômodos
        mostrarListaComodos();
    </script>
</body>

</html>