    <!-- Script para adicionar a funcionalidade do menu -->
    <script>
        <!-- <!-- // Seleciona o ícone do menu -->
        var icon = $(".navbar__icon");

         // Seleciona o menu -->
        var menu = $(".navbar__menu");

        // Adiciona um evento de clique ao ícone -->
        icon.click(function() {
            // Alterna a classe "active" no ícone -->
            icon.toggleClass("active");

            // Se o ícone tiver a classe "active" -->
            if (icon.hasClass("active")) {
                // Muda a altura máxima do menu para um valor alto -->
                menu.css("max-height", "500px");

                // Rotaciona a primeira linha do ícone em 45 graus -->
                icon.find(".navbar__icon-line:first-child").css("transform", "rotate(45deg)");

                // Esconde a segunda linha do ícone -->
                icon.find(".navbar__icon-line:nth-child(2)").css("opacity", "0");

                 // Rotaciona a terceira linha do ícone em -45 graus -->
                icon.find(".navbar__icon-line:last-child").css("transform", "rotate(-45deg)");
            } else {
                 // Muda a altura máxima do menu para zero -->
                menu.css("max-height", "0");

                // Desfaz as transformações nas linhas do ícone -->
                icon.find(".navbar__icon-line").css("transform", "none");

                // Mostra a segunda linha do ícone -->
                icon.find(".navbar__icon-line:nth-child(2)").css("opacity", "1");
            }
        });
    </script>

